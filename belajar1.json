  "paths": {
    "/todolist": {
      "get": {
        "summary": "get All Todolist",
        "description": "Get All active todolist by default",
        "responses": {},
        "parameters": [
          {
            "name": "include_done",
            "in": "query",
            "required": false,
            "description": "Is include_done todolist",
            "schema": {
              "type": "boolean",
              "default": true
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "Filter todolist by name",
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      "post": {
        "summary": "Add Todolist",
        "description": "Add new Todolist",
        "responses": {}
      }
    },
    "/todolist/{todolistId}": {
      "put": {
        "summary": "Edit todolist",
        "description": "Edit existing todolist",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "todolistId for Update",
            "schema": {
              "type": "integer",
              "nullable": false
            }
          }
        ],
        "responses": {}
      },
      "delete": {
        "summary": "Delete todolist",
        "description": "Delete an existing todolist",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "todolistId for Delete",
            "schema": {
              "type": "integer",
              "nullable": false
            }
          }
        ],
        "responses": {}
      }
    }
  }
}
